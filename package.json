{
  "name": "react-indexeddb",
  "description": "React Hooks for IndexedDB",
  "author": "Amar Kisoensingh",
  "repository": "github:UNRULYEON/react-indexeddb",
  "keywords": [
    "react",
    "hooks",
    "indexeddb"
  ],
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "test:ui": "turbo test:ui",
    "lint:check": "turbo lint:check",
    "lint:fix": "turbo lint:fix",
    "format:check": "turbo format:check",
    "format:fix": "turbo format:fix",
    "prepare": "husky install",
    "pre-commit": "pnpm run --filter \"*\" pre-commit",
    "publish-packages": "turbo run build lint:check format:check && changeset version && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "turbo": "latest",
    "vitest": "^1.4.0"
  },
  "packageManager": "pnpm@8.10.3",
  "engines": {
    "node": ">=20"
  }
}
